# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# STRIPE (Feature Flagged)
# ============================================
# Set to 'true' to enable billing features
NEXT_PUBLIC_BILLING_ENABLED=false

# Server-side Stripe key (never expose to client)
STRIPE_SECRET_KEY=sk_test_...

# Client-side Stripe key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Price IDs from Stripe Dashboard
STRIPE_PRO_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRICE_ID=price_...

# Webhook secret for Stripe webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# APP CONFIG
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App name (used in emails, titles, etc.)
NEXT_PUBLIC_APP_NAME=SaaS Template

# ============================================
# EMAIL (Optional)
# ============================================
# For custom email sending (Resend, SendGrid, etc.)
# RESEND_API_KEY=re_...
# EMAIL_FROM=noreply@yourdomain.com
